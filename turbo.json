{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["yarn.lock"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "build/**", "dist/**"]
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "start": {
      "cache": false,
      "dependsOn": ["build"]
    }
  }
}
